---
import { Icon } from "astro-icon/components";

interface Props {
    id?: string;
    title: string;
    description: string;
    tech: string[];
    link?: string;
    github?: string;
    image?: string;
}

const { id, title, description, tech, link, github, image } = Astro.props;
---

<div
    class="group flex flex-col md:flex-row relative overflow-hidden w-full card"
>
    <!-- Decorative Header Line (vertical on desktop now looks better? or keep top? Let's keep it simple or remove if it conflicts. User wanted minimalist. Let's keep a subtle left border or top border. I'll keep the hover effect on the whole card border.) -->

    {
        image && (
            <div class="w-full md:w-2/5 h-48 md:h-auto overflow-hidden border-b md:border-b-0 md:border-r border-border-subtle relative">
                <div class="absolute top-0 left-0 w-full h-full bg-accent-violet/10 opacity-0 group-hover:opacity-100 transition-opacity z-10" />
                <img
                    src={image}
                    alt={title}
                    class="w-full h-full object-cover transition-transform duration-500 transform group-hover:scale-105"
                />
            </div>
        )
    }
    <div class="p-6 md:w-3/5 flex flex-col justify-between gap-4">
        <div>
            <div class="flex flex-col gap-2 mb-3">
                <div class="flex justify-between items-start">
                    <h3
                        class="text-text-main text-xl font-bold group-hover:text-accent-violet transition-colors"
                    >
                        {title}
                    </h3>
                </div>
                <div
                    class="flex flex-wrap gap-x-4 gap-y-2 text-text-muted text-xs font-mono"
                >
                    {
                        tech.map((t) => (
                            <span class="text-accent-violet"># {t}</span>
                        ))
                    }
                </div>
            </div>

            <p
                class="text-text-muted text-sm leading-relaxed"
                data-i18n={id ? `project.${id}.desc` : undefined}
            >
                {description}
            </p>
        </div>

        <div class="flex gap-4 pt-4 mt-auto border-t border-border-subtle/30">
            {
                link && (
                    <a
                        href={link}
                        class="px-5 py-2 border border-accent-violet text-white text-sm font-mono flex items-center gap-2 hover:bg-accent-violet/10 transition-colors"
                    >
                        Live <span class="text-accent-violet">~&gt;</span>
                    </a>
                )
            }
            {
                github && (
                    <a
                        href={github}
                        class="px-5 py-2 border border-border-subtle text-text-muted text-sm font-mono flex items-center gap-2 hover:text-white hover:border-white transition-colors"
                    >
                        Code <span class="text-text-muted">/&gt;</span>
                    </a>
                )
            }
            {
                !link && !github && (
                    <span class="text-text-muted text-sm font-mono italic">
                        Coming soon...
                    </span>
                )
            }
        </div>
    </div>
</div>
