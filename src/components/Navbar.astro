---
import { Icon } from "astro-icon/components";

// (Mantén tu lógica de navLinks existente aquí...)
const navLinks = [
    { name: "#home", href: "/" },
    { name: "#works", href: "/projects" },
    { name: "#about-me", href: "/#about" },
    { name: "#skills", href: "/skills" },
    { name: "#contacts", href: "/contact" },
];
---

<header
    id="main-header"
    class="fixed w-full top-0 z-50 transition-all duration-300 border-b border-transparent"
>
    <div class="container-custom py-4 flex justify-between items-center">
        <a
            href="/"
            class="flex items-center gap-2 font-bold text-white text-xl tracking-tight group"
        >
            <div
                class="p-1.5 rounded-lg bg-accent-violet/10 group-hover:bg-accent-violet/20 transition-colors border border-accent-violet/20"
            >
                <Icon
                    name="mdi:code-braces"
                    class="w-5 h-5 text-accent-violet"
                />
            </div>
            <span>Paul<span class="text-accent-violet">.dev</span></span>
        </a>

        <nav class="hidden md:flex items-center gap-1">
            <div
                class="flex bg-white/5 backdrop-blur-md rounded-full px-2 py-1 border border-white/5"
            >
                <a
                    href="/"
                    class="px-4 py-1.5 text-sm text-text-muted hover:text-white hover:bg-white/5 rounded-full transition-all"
                    data-i18n="nav.home">Inicio</a
                >
                <a
                    href="/#projects"
                    class="px-4 py-1.5 text-sm text-text-muted hover:text-white hover:bg-white/5 rounded-full transition-all"
                    data-i18n="nav.works">Proyectos</a
                >
                <a
                    href="/#about"
                    class="px-4 py-1.5 text-sm text-text-muted hover:text-white hover:bg-white/5 rounded-full transition-all"
                    data-i18n="nav.about">Sobre mí</a
                >
                <a
                    href="/skills"
                    class="px-4 py-1.5 text-sm text-text-muted hover:text-white hover:bg-white/5 rounded-full transition-all"
                    data-i18n="nav.skills">Habilidades</a
                >
            </div>

            <div class="ml-4 pl-4 border-l border-white/10">
                <a
                    href="/contact"
                    class="px-5 py-2 text-sm bg-white text-black font-semibold rounded-full hover:bg-accent-light transition-colors"
                    data-i18n="nav.contacts">Contacto</a
                >
            </div>
        </nav>

        <button id="mobile-menu-btn" class="md:hidden text-white p-2">
            <Icon name="mdi:menu" class="w-8 h-8" />
        </button>
    </div>
</header>

<style>
    /* Estilo para cuando se hace scroll */
    .navbar-scrolled {
        background: rgba(10, 11, 16, 0.8);
        backdrop-filter: blur(12px);
        border-bottom-color: rgba(255, 255, 255, 0.05);
    }
</style>
