---
import { Icon } from "astro-icon/components";
---

<footer
    class="border-t border-border-subtle mt-12 py-8 bg-bg-dark relative z-10"
>
    <div
        class="container-custom flex flex-col md:flex-row justify-between items-center gap-6"
    >
        <!-- Info -->
        <div class="flex flex-col gap-2 text-center md:text-left">
            <div
                class="flex items-center gap-2 font-bold text-white justify-center md:justify-start"
            >
                <Icon
                    name="mdi:code-braces"
                    class="w-5 h-5 text-accent-violet"
                />
                <span>Paul</span>
                <span class="text-text-muted font-normal text-sm ml-2"
                    >paulmamani10@gmail.com</span
                >
            </div>
            <p class="text-white text-sm" data-i18n="footer.role"></p>
        </div>
    </div>

    <div
        class="text-center text-text-muted text-xs mt-8"
        data-i18n="footer.copy"
    >
    </div>
</footer>
